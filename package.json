{
    "name": "test-orchestration-system",
    "version": "1.0.0",
    "description": "Full Test Platform - Automation + API + Monitoring with Playwright, Supertest, and K6",
    "main": "dist/app/server.js",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node src/app/server.ts",
        "start": "node dist/app/server.js",
        "test:api": "jest --config jest.config.js --testPathPattern=tests/api",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:performance": "k6 run tests/performance/load-test.js",
        "test:performance:stress": "k6 run tests/performance/stress-test.js",
        "test:all": "npm run test:api && npm run test:e2e -- --project=chromium",
        "test:full": "bash scripts/run-all-tests.sh",
        "seed": "ts-node scripts/seed-data.ts",
        "report:generate": "ts-node scripts/generate-report.ts",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
        "lint": "eslint . --ext .ts",
        "clean": "rm -rf dist reports/api reports/e2e reports/performance"
    },
    "keywords": [
        "playwright",
        "supertest",
        "k6",
        "automation",
        "testing",
        "e2e",
        "api-testing",
        "performance-testing"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "better-sqlite3": "^9.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.1",
        "@types/better-sqlite3": "^7.6.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^9.0.7",
        "jest": "^29.7.0",
        "jest-html-reporter": "^3.10.2",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}